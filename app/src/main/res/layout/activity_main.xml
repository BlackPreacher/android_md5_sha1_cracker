<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.development.black_preacher.md5_sha1_cracker.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MD5 &amp; SHA1 Cracker"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Insert your Hash"
        android:id="@+id/field_header"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/header"
        android:layout_alignStart="@+id/header" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hash_edit"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/field_header"
        android:layout_alignParentStart="true"
        android:hint="Paste the Hash here" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solve to Plaintext"
        android:id="@+id/calc_button"
        android:layout_below="@+id/hash_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:onClick="calculate_plain"
        android:background="@color/red"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Result"
        android:id="@+id/result_view"
        android:layout_below="@+id/calc_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscibe"
        android:id="@+id/subscribeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogToken"
        android:id="@+id/logTokenButton"
        android:layout_alignBottom="@+id/subscribeButton"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
